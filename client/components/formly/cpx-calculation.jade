


.calculation-row(flex layout='row')
  .calculation-column(flex='33' layout='column')
    span &nbsp;
  .calculation-column.border-top(flex='33' layout='column')
    label Cover Plus
  .calculation-column.border-top(flex='33' layout='column')
    label Cover Plus Extra


.calculation-row(flex layout='row')
  .calculation-column.border-left(flex='33' layout='column')
    label Cover Amount
  .calculation-column(flex='33' layout='column')
    label {{currencyFormat(model.earnings * 0.8)}}
  .calculation-column(flex='33' layout='column')
    label {{currencyFormat(model.cover)}}

.calculation-row(flex layout='row')
  .calculation-column.border-left(flex='33' layout='column')
    label Levy Cost
  .calculation-column(flex='33' layout='column')
    label {{cpCalculation}}
    md-progress-circular(ng-show='! cpCalculation' md-mode='indeterminate')
  .calculation-column(flex='33' layout='column')
    label {{cpxCalculation}}
    md-progress-circular(ng-show='! cpxCalculation' md-mode='indeterminate')
