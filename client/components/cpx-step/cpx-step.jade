



.step-container-outer(id='{{"step-" + name}}')


  .step-container-title(sticky, offset='48', disabled-sticky='name === "welcome" || ! step.isActive()')

    //TODO should be associated with welcome screen rather than cpx step
    .back-content(ng-if='::first')
      md-icon(md-font-set="material-icons") keyboard_arrow_left
      span Back to Business Cover

    .title-content
      md-icon(ng-if='icon' md-svg-src="{{icon}}")

      h1.title(ng-bind-html='::title', tabindex='-1' ng-click='scrollToStep(name)')

      .step-content(ng-if='::progress')
        span.progress {{::progress}}

      .step-save(ng-if=':: ! first')

        md-button(tabindex='-1')
          md-icon(md-font-set="material-icons") link
          | Save for later


    md-button.step-back-arrow.md-icon-button(ng-if='! hideBack', tabindex='-1' ng-click='stepBack(name)')
      md-icon(md-font-set="material-icons") keyboard_arrow_up


  .step-container-inner()

    form(name='form' ng-submit='submit(form)', novalidate)

      formly-form(form='form', model='getModel(name)', fields='fields')

